{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src", // Source code location
    "outDir": "./dist", // Output directory for compiled JS

    /* Environment Settings */
    "module": "nodenext", // Modern module resolution for Node.js (ESM)
    "target": "esnext", // Compile to the latest supported JS version
    "lib": ["esnext"], // Include latest JS library features
    "types": ["node"], // Include Node.js type definitions

    /* Other Outputs */
    "sourceMap": true, // Generate .map files for debugging TS directly
    "declaration": true, // Generate .d.ts type definition files
    "declarationMap": true, // Link .d.ts files to source code (for "Go to Definition")

    /* Stricter Typechecking Options */
    "noUncheckedIndexedAccess": true, // Forces check for undefined when accessing array by index
    "exactOptionalPropertyTypes": true, // Prevents setting 'undefined' to optional properties

    /* Recommended Options */
    "strict": true, // Enable all strict type-checking options
    "verbatimModuleSyntax": true, // Enforce explicit 'import type' usage; preserves imports accurately
    "isolatedModules": true, // Ensure each file can be safely transpiled (required for bundlers like Vite/esbuild)
    "skipLibCheck": true, // Skip type checking of declaration files in node_modules (performance)
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true // Disallow inconsistent casing in imports (Critical for Linux/CI)
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
